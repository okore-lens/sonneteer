echo "Running Jest tests before pushing..."
pnpm test

if [ $? -ne 0 ]; then
  echo "❌ Tests failed! Push aborted."
  exit 1
fi

echo "🔍 Building the project"
pnpm build
if [ $? -ne 0 ]; then
  echo "❌ Build failed! Push aborted."
  exit 1
fi

rm -f tsconfig.tsbuildinfo

echo "✅ Build passed! Proceeding with push..."
