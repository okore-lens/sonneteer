echo "Running Jest tests before pushing..."
pnpm test

if [ $? -ne 0 ]; then
  echo "âŒ Tests failed! Push aborted."
  exit 1
fi

echo "ğŸ” Running ESLint on src/..."
pnpm exec eslint src --max-warnings=0
if [ $? -ne 0 ]; then
  echo "âŒ Linting failed! Push aborted."
  exit 1
fi

echo "ğŸ” Checking TypeScript types..."
pnpm exec tsc --noEmit
if [ $? -ne 0 ]; then
  echo "âŒ TypeScript type errors found! Push aborted."
  exit 1
fi

echo "âœ… Linting & TypeScript checks passed! Proceeding with push..."
